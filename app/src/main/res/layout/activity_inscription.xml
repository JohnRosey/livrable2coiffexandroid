<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context=".screen.Inscription">

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create account"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        android:padding="17dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />

    <LinearLayout

        android:id="@+id/lin_layout"
        android:layout_width="fill_parent"
        android:layout_height="400dp"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/text1">

        <ImageView
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:layout_marginLeft="5sp"
            android:id="@+id/rback"
            android:src="@drawable/arrow" />

        <!-- champ pour nom -->
        <EditText
            android:id="@+id/edit_nom"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/background_button_blanc"
            android:hint="Last name"
            android:inputType="textPersonName"
            android:padding="8dp"
            android:textColor="#82D4E5"
            android:textSize="16sp" />

        <!-- champ pour Prenom -->
        <EditText
            android:id="@+id/edit_prenom"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/background_button_blanc"
            android:hint="First name"
            android:inputType="textPersonName"
            android:padding="8dp"
            android:textColor="#82D4E5"
            android:textSize="16sp" />


        <!-- champ pour l'adresse -->
        <EditText
            android:id="@+id/edit_email"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/background_button_blanc"
            android:hint="Email"
            android:inputType="textPersonName"
            android:padding="8dp"
            android:textColor="#82D4E5"
            android:textSize="16sp" />

        <!-- champ pour le numero  -->

        <EditText
            android:id="@+id/edit_number"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/background_button_blanc"
            android:hint="XXX-XXX-XXXX"
            android:inputType="textPersonName"
            android:padding="8dp"
            android:textColor="#82D4E5"
            android:textSize="16sp" />

        <!-- champ pour le mot de passe -->

        <EditText
            android:id="@+id/edit_password"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/background_button_blanc"
            android:hint="Password"
            android:inputType="textPersonName"
            android:padding="9dp"
            android:textColor="#82D4E5"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edit_confirmation_password"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/background_button_blanc"
            android:hint="Confirmation password"
            android:inputType="textPersonName"
            android:padding="9dp"
            android:textColor="#82D4E5"
            android:textSize="16sp" />
        <CheckBox
            android:id="@+id/rshowPass"
            android:paddingLeft="8sp"
            android:text="Show Password"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"/>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_singup"
        style="@android:style/Widget.Button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/background_button_violet"
        android:drawableEnd="@drawable/circle2"
        android:paddingStart="64dp"
        android:text="SINGUP"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/lin_layout" />

    <TextView
        android:id="@+id/text_account"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Already have an account ?"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/button_singup"/>




</androidx.constraintlayout.widget.ConstraintLayout>